<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "Body" %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<p>
<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>
</p>
